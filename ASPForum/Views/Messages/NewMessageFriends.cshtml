@using ASPForum.Resources
@model IEnumerable<ASPForum.Models.Friends>


<script language="JavaScript" type="text/javascript">
        $(document).ready(function() {
            $(".dropdown-menu").on('click',
            'li',
            function() {
                var selected = $(this).text();
                console.log(selected);
                var edit = $("#toName").val();
                $("#toName").val(selected);

            });
    });

</script>
<div class="form-group">
    @Html.Label(GlobalRes.To, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.Editor("toName", new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="dropdown col-md-offset-2 col-md-2">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            @GlobalRes.Friends
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {
                <li id="dropdown"><a href="#">@item.Friend.UserName</a></li>
            }
        </ul>
    </div>
</div>