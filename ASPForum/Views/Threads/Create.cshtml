@model ASPForum.Models.Thread

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tworzenie nowego wątku</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thread</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <span class="control-label col-md-2">Tytuł: </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Opis: </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                <span class="control-label col-md-2">Czy przypiąć? </span>
                <div class="col-md-10">
                    Tak @Html.RadioButtonFor(m => m.IsPinned, true)
                    Nie @Html.RadioButtonFor(m => m.IsPinned, false)
                    @Html.ValidationMessageFor(model => model.IsPinned, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            @Html.Hidden("IsPinned",false)
        }
        @Html.Hidden("subjectId", (object)ViewBag.SubjectId)
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "ThreadsSubject", "Threads", new {id = ViewBag.SubjectId} ,null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
