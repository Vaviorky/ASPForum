@model IEnumerable<ASPForum.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
           
            <!-- Static Header -->
            <div class="header-text hidden-xs">
                <div class="col-md-12 text-center">
                    <h2>
                        <span>@ViewBag.News[0].Title</span>
                    </h2>
                    <br>
                    <h3>
                        <span>@ViewBag.News[0].Text</span>
                    </h3>
                    <br /><br />
                </div>
            </div><!-- /header-text -->
        </div>
        <div class="item">
            <!-- Static Header -->
            <div class="header-text hidden-xs">
                <div class="col-md-12 text-center">
                    <h2>
                        <span>@ViewBag.News[1].Title</span>
                    </h2>
                    <br>
                    <h3>
                        <span>@ViewBag.News[1].Text</span>
                    </h3>
                    <br/><br />

                </div>
            </div><!-- /header-text -->
        </div>
        <div class="item">
            <!-- Static Header -->
            <div class="header-text hidden-xs">
                <div class="col-md-12 text-center">
                    <h2>
                        <span>@ViewBag.News[2].Title</span>
                    </h2>
                    <br>
                    <h3>
                        <span>@ViewBag.News[2].Text</span>
                    </h3>
                    <br /><br />
                </div>
            </div><!-- /header-text -->
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div><!-- /carousel -->



<div class="panel-group title-bar-position" id="accordion">

    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading title-bar">


                <table>
                    <tr>
                        <td class="col-xs-8">
                            <b>@item.Title</b>
                        </td>
                        <td class="col-xs-1">
                            Wątki

                        </td>
                        <td class="col-xs-1">
                            Posty

                        </td>
                        <td class="col-xs-2">
                            Ostatni post
                        </td>

                    </tr>
                </table>
            </div>

            <div class="panel-body" style="padding-top:0px; padding-bottom: 0px;">

                @Html.Action("Subjects_partial", "Categories", new { id = item.Id })

            </div>

        </div>
    }
</div>
<h4>Statystyki</h4>
<hr />
Liczba postów: <b>@ViewBag.PostCount</b> • Liczba wątków: <b>@ViewBag.ThreadCount</b> • Liczba użytkowników: <b>@ViewBag.UserCount</b> • Najnowszy użytkownik: <b></b>@ViewBag.NewestUser