@using ASPForum.Resources
@model ASPForum.Models.Post
<div>
    <a href="@Url.Action("PostThread", "Posts", new {id = Model.ThreadId, page=ViewBag.Page})#@Model.Id">@Model.Thread.Title</a>
</div>
<div style="font-size: 13px">@GlobalRes.Author: @Model.User.UserName</div>
<div style="font-size: 12px"> @($"{Model.Date:dd/MM/yyyy, hh:mm}") </div>