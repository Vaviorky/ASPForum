@using ASPForum.Resources
@model ASPForum.Models.Category

<h3>@GlobalRes.DoYouWanttoDeleteCategory @Model.Title?</h3>
<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @GlobalRes.Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @GlobalRes.Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Ajax.ActionLink(GlobalRes.DeleteCategory, "Delete", "Categories", new {id = Model.Id},
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "moj_div",
                    InsertionMode = InsertionMode.Replace
                }, new {@class = "btn btn-danger btn-md"})

            @Ajax.ActionLink(GlobalRes.BackToCategoryList, "ManageForum", "Manage", null, new AjaxOptions {UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET"}, new {@class = "btn btn-primary btn-md"})
        </div>
    }
</div>