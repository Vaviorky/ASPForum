@using ASPForum.Resources
@model IEnumerable<ASPForum.Models.Subject>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-12 subject-content">
            <table width="100%">

                <tr>
                    <td>
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </td>
                    <td class="col-sm-10 col-xs-7">
                        <div style="padding-bottom: 5px;">
                            @Html.ActionLink(item.Title, "ThreadsSubject", "Threads", new { id = item.Id }, new { @style = "font-size: 17px;" })
                        </div>
                        <div style="font-size: 14px;">
                            @GlobalRes.Threads: @Html.Action("ThreadsCount", "Categories", new { id = item.Id }),
                            @GlobalRes.Posts: @Html.Action("PostCount", "Categories", new { id = item.Id })
                        </div>

                    </td>
                    <td class="col-sm-2 col-xs-5">
                        @Html.Action("NewPost", "Categories", new { id = item.Id })
                    </td>
                </tr>
            </table>

        </div>
    }
</div>