@model ASPForum.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document)
            .ready(function () {
                $('#openFile')
                    .on('change',
                        function () {
                            $('#error').empty();

                            var filename = $('input[type=file]').val().replace(/C:\\fakepath\\/i, '');
                            var extension = filename.replace(/^.*\./, '');

                            if (extension === filename) {
                                extension = '';
                            } else {
                                extension = extension.toLowerCase();
                            }
                            switch (extension) {
                                case 'jpg':
                                case 'jpeg':
                                case 'png':
                                    $('#submit').attr("disabled", false);
                                    break;
                                default:
                                    $('#submit').attr("disabled", true);
                                    $('#error').append('<p>Nieprawidłowe rozszerzenie pliku</p>');
                            }
                            var size = this.files[0].size;
                            if (size > 500000) {
                                $('#submit').attr("disabled", true);
                                $('#error').append('<p>Zbyt duży rozmiar</p>');
                            }


                        });
                var url = window.URL || window.webkitURL;

                $("#openFile")
                    .change(function (e) {
                        var image, file;
                        if ((file = this.files[0])) {
                            image = new Image();
                            image.onload = function () {
                                if (this.width > 150 || this.height > 150 || ((this.width / this.height) !== 1)) {
                                    $('#submit').attr("disabled", true);
                                    $('#error').append('<p>Nieprawidłowa rozdzielczość obrazka</p>');
                                }
                            };
                            image.src = url.createObjectURL(file);
                        }
                    });

            });

    </script>

}

<h2>Panel użytkownika</h2>
<div id="page" class="col-md-12">
    <div id="functions" class="col-md-3">
        <a href="?option=profile" class="list-group-item list-group-item-info">Profil</a>
        <a href="?option=messagebox" class="list-group-item list-group-item-info">Wiadomości</a>
        <a href="?option=info" class="list-group-item list-group-item-info">Zmień dane</a>
        <a href="?option=avatar" class="list-group-item list-group-item-info">Zmień awatar</a>
        <br />
        @if (User.IsInRole("Admin") && Request.IsAuthenticated)
        {
            <h5>Opcje administracyjne:</h5>
            <a href="?option=users" class="list-group-item list-group-item-text">Użytkownicy</a>
            <a href="?option=forums" class="list-group-item list-group-item-text">Forum</a>
            <a href="?option=news" class="list-group-item list-group-item-text">Newsy</a>
        }


    </div>
    <div id="content" class="col-md-9">
        @switch (Request["option"])
        {
            case "profile":
                @Html.Action("AccountDetails", "Manage")
                break;
            case "messagebox":
                @Html.Action("Inbox", "Manage")
                break;
            case "info":
                @Html.Action("ChangeDetails", "Manage")

                break;
            case "avatar":
                @Html.Action("ChangeAvatar", "Manage")

                break;

            case "users":
                if (User.IsInRole("Admin"))
                {
                    @Html.Action("ManageUsers", "Manage")
                }
                else
                {
                    <p>Brak takiej strony</p>
                }
                break;
            case "forums":
                @Html.Action("ManageForum", "Manage")
                break;
            case "news":
                @Html.Action("ManageNews", "Manage")
                break;
            default:
                <p>Brak takiej strony</p>
                break;
        }


    </div>
</div>
