@using Microsoft.AspNet.Identity
@model ASPForum.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document)
            .ready(function () {
                $('#openFile')
                    .on('change',
                        function () {

                            var filename = $('input[type=file]').val().replace(/C:\\fakepath\\/i, '');
                            console.log(filename);
                            var extension = filename.replace(/^.*\./, '');

                            if (extension === filename) {
                                extension = '';
                            } else {
                                extension = extension.toLowerCase();
                            }
                            console.log(extension);
                            switch (extension) {
                                case 'jpg':
                                    console.log("asdasdasda");
                                    break;
                                case 'jpeg':
                                    break;
                                case 'png':
                                    break;
                                default:
                                    $('submit').prop('disabled', true);
                            }
                            var size = this.files[0].size;
                            if (size > 5) {
                                $('p[id=error]').val("ERROR");
                            }
                        });
            });
    </script>

}

<h2>Panel użytkownika</h2>
<div id="page" class="col-md-12">
    <div id="functions" class="col-md-3">
        <a href="?option=profile" class="list-group-item list-group-item-info">Profil</a>
        <a href="?option=info" class="list-group-item list-group-item-info">Zmień dane</a>
        <a href="?option=avatar" class="list-group-item list-group-item-info">Zmień awatar</a>
        <br/>
        @if (User.IsInRole("Admin") && Request.IsAuthenticated)
        {
            <a href="#" class="list-group-item list-group-item-text">Zarządzaj użytkownikami</a>
            <a href="#" class="list-group-item list-group-item-text">Zarządzaj forami</a>
            <a href="#" class="list-group-item list-group-item-text">Zarządzaj newsami</a>
        }

        

    </div>
    <div id="content" class="col-md-9">
        @Html.Action("OptionsView", "Manage", new { id = Request["option"] })


    </div>
</div>
