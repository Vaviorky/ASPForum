@using ASPForum.Resources
@model IEnumerable<ASPForum.Models.Subject>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-12 subject-content">
            <table width="100%">

                <tr>

                    <td class="col-md-9 col-sm-7 col-xs-7">
                        @Html.ActionLink(item.Title, "ThreadsSubject", "Threads", new { id = item.Id }, null) <br />
                    </td>
                    <td class="col-md-3 col-sm-5 col-xs-5">
                        @Ajax.ActionLink(GlobalRes.Edit, "Edit","Subjects", new {id = item.Id}, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-info btn-sm" })
                        @Ajax.ActionLink(GlobalRes.Delete, "Delete", "Subjects", new {id = item.Id}, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-danger btn-sm" })

                    </td>
                </tr>
            </table>

        </div>
    }
</div>
