@model ASPForum.Models.ApplicationUser
@if (User.IsInRole("Admin"))
{
    <h3>Czy na pewno chcesz usunąć tego użytkownika?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RegistrationDate)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Ajax.ActionLink("Usuń użytkownika", "DeleteConfirmed", null, new { id = Model.Id },
                                new AjaxOptions
                                {
                                    HttpMethod = "POST",
                                    UpdateTargetId = "moj_div",
                                    InsertionMode = InsertionMode.Replace

                                }, new {@class = "btn btn-danger btn-md"})
                |
                @Ajax.ActionLink("Powrót do listy", "ManageUsers", null, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-primary btn-md" })
            </div>
        }
    </div>
}