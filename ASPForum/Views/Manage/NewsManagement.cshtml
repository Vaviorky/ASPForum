@model IEnumerable<ASPForum.Models.News>
@if (User.IsInRole("Admin") && Request.IsAuthenticated)
{
    @Ajax.ActionLink("Stwórz nowego newsa", "Create", "News", null, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-success btn-md" })
    <table class="table table-bordered">
        <th class="col-md-5">Tytuł</th>
        <th class="col-md-5">Autor</th>
        <th class="col-md-2">Akcja</th>
        @foreach (var news in Model)
        {
            <tr>
                <td>
                    @news.Title
                </td>
                <td>
                    @news.User.UserName
                </td>
                <td>
                    @Ajax.ActionLink("Edytuj", "Edit","News", new { id = news.Id }, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-info btn-sm" })
                    @Ajax.ActionLink("Usuń", "Delete", "News", new { id = news.Id }, new AjaxOptions { UpdateTargetId = "moj_div", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-danger btn-sm" })
                </td>

            </tr>
        }
    </table>
}